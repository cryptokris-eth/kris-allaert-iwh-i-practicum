doctype html
html
  head
    title= "My personal Library"
    style
      | table {
      |   width: 50%;
      |   border-collapse: collapse;
      |   margin: 20px 0;
      | }
      | th, td {
      |   border: 1px solid #ddd;
      |   padding: 8px;
      |   text-align: left;
      | }
      | th {
      |   background-color: #f2f2f2;
      | }
      | tr:nth-child(even) {
      |   background-color: #f9f9f9;
      | }
  body
    h1 My Personal Library
    
    a(href="/form") Add a new book
    
    if data && data.length
      table
        thead
          tr
            th Title
            th Price
            th Publisher
            th Action
        tbody
          each book in data
            tr
              td #{book.properties.name}
              td #{book.properties.price}
              td #{book.properties.publisher}
              td
                a(href=`/edit/${book.id}`) Edit
    else
      p No books found in your library yet!
